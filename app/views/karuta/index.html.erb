<!doctype html>
<head>
  <link rel="stylesheet" type="text/css" href="css/style.css" />
  <script src="js/jquery-1.11.1.min.js"></script>
  <script src="js/jquery-ui-1.11.1.js"></script>
  <script src="js/jquery.flip.min.js"></script>
  <script src="js/karuta.js"></script>
</head>
<body>
    <div id="quetioin-area" class="jumbotron">
      <h2>＊　質問！　＊</h2>
      <h3><%= @question %></h3>
    </div>
  <div id="karuta-list">
    <center>

    <table>
      <% answer_list = [ @answer, '甘酸っぱい', 'おおむね赤', 'なつみかん', 'かなり酸っぱいと思う', 'たいてい黄色' ] %>
      <% answer_detail_list = [ @answer_detail, 'え？', 'え？', 'え？', 'え？', 'え？'] %>
      <% img_list = %w{ wrong.png flip.png hi.png mello.png run.png sleep.png } %>
      <% answer_list.each_with_index do |answer,i| %>
        <% if i == 3 %>
        <tr>
        <% end %>
        <td>
          <div class="karuta"><h3><%= answer %><%= image_tag(img_list[i]) %></h3></div>
          <div class="karutaData"><p><%= answer_detail_list[i] %><%= image_tag(img_list[0]) %></p></div>
        </td>
      <% end %>
    </table>
    </center>
  </div>
</body>
