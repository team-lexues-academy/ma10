<!doctype html>
<head>
  <link rel="stylesheet" type="text/css" href="css/style.css" />
  <script src="js/jquery-1.11.1.min.js"></script>
  <script src="js/jquery-ui-1.11.1.js"></script>
  <script src="js/jquery.flip.min.js"></script>
  <script src="js/karuta.js"></script>
  <script type="text/javascript" src="js/jquery.pjax.js"></script>
</head>
<body>
  <div class="header">
  <%= image_tag("search.gif") %>
  <h1>ドラえもんカルタ</h1>
  </div>
  <div id="question-karuta">
  <center>
    <div id="quetioin-area">
      <%= @question[0] %>
    </div>
  </center>

  <div id="karuta-list">
    <center>
    <div id="result"></div>
      <table>
      <% answer_list = [ @answer[0], @answer[1], @answer[2], @answer[3], @answer[4], @answer[5] ] %>
      <% answer_detail_list = [ @answer_detail[0], 'え？', 'え？', 'え？', 'え？', 'え？'] %>
      <% img_list = %w{ wrong.png flip.png hi.png mello.png run.png sleep.png } %>
      <% answer_list.each_with_index do |answer,i| %>
        <% if i == 3 %>
        <tr>
        <% end %>
        <td>
          <div class="karuta"><%= answer %><%= image_tag(img_list[i]) %></div>
          <div class="karutaData"><%= answer_detail_list[i] %><%= image_tag(img_list[0]) %></div>
        </td>
      <% end %>
    </table>
    </center>
  </div>
  </div>
  <span></span>
</body>
